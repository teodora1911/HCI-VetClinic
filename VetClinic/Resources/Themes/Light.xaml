<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="ForegroundColor">Black</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundNegativeColor">WhiteSmoke</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryColor">#6200EE</SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryColor">#018786</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryBackgroundColor">WhiteSmoke</SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryBackgroundColor">#F1F1F1</SolidColorBrush>
    <SolidColorBrush x:Key="ErrorColor">#B00200</SolidColorBrush>

    <Style x:Key="FontFamilyWindow" TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="Tahoma" />
        <Setter Property="FontSize" Value="16" />
    </Style>
</ResourceDictionary>